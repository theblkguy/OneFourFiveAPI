# Port for the API (default: 3000)
PORT=3000

# Neon Auth (REQUIRED when using Neon Auth)
# Get from Neon Console → Project → Auth → Configuration (enable Auth first at console.neon.tech)
NEON_AUTH_URL=https://ep-xxx.neonauth.us-east-2.aws.neon.build/neondb/auth

# JWT (REQUIRED when NOT using Neon Auth — custom auth fallback)
# Use a long random string; e.g. openssl rand -base64 32
JWT_SECRET=your-secure-secret-at-least-16-chars

# Global rate limit: max requests per 15-minute window per IP (default: 100)
RATE_LIMIT_MAX=100

# Neon PostgreSQL database URL (REQUIRED in production)
# Get this from your Neon Console: https://console.neon.tech
# Format: postgres://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/neondb?sslmode=require

# Progression routes rate limit (per-user)
# Window in milliseconds (default: 900000 = 15 minutes)
PROGRESSION_RATE_LIMIT_WINDOW_MS=900000
# Max requests per window (default: 100)
PROGRESSION_RATE_LIMIT_MAX=100
