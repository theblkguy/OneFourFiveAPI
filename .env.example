# Port for the API (default: 3000)
PORT=3000

# JWT secret for token verification (REQUIRED in production)
JWT_SECRET=your-secure-secret-here

# Global rate limit: max requests per 15-minute window per IP (default: 100)
RATE_LIMIT_MAX=100

# Progression routes rate limit (per-user/token or per-IP fallback)
# Window in milliseconds (default: 900000 = 15 minutes)
PROGRESSION_RATE_LIMIT_WINDOW_MS=900000
# Max requests per window (default: 100)
PROGRESSION_RATE_LIMIT_MAX=100

# JWT secret (required in production). Use a long random string.
JWT_SECRET=your-secret-key-change-in-production

# JWT expiration (default: 7d). Examples: 7d, 24h, 60m
JWT_EXPIRES_IN=7d
